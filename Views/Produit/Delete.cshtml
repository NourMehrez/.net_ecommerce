@model First_Project.Models.Produit

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h2>Delete Product</h2>
        </div>
        <div class="card-body">
            <h4 class="text-danger">Are you sure you want to delete this product?</h4>
            <div class="mt-4">
                <center>
                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.LibelleProduit)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.LibelleProduit)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.ImageProduit)
                    </dt>
                    <dd class="col-sm-9">
                        <img src="~/Uploads/@Model.ImageProduit" alt="Product Image" class="img-thumbnail" style="max-width: 150px;" />
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.prix)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.prix) €
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Categorie)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Categorie.NomCategorie)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Stock)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Stock.Id)
                    </dd>
                </dl>
                </center>
            </div>
            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="IdProduit" />
                <div class="d-flex justify-content-between">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
