@model IEnumerable<First_Project.Models.Utilisateur>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create" class="btn btn-primary mt-2"><i class="fa-solid fa-user-plus"></i> Create New</a>

</p>
<table  class="table   table-hover  ">
    <thead>
        <tr class="text-center">
          
            <th>
               image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.role.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="text-center">
              
                <td class="align-middle">
                    @if (item.ImageUrl != null)
                    {
                        <img class="rounded-circle" src="~/uploads/@item.ImageUrl" alt="Alternate Text" style="width:80px" class="img-thumbnail" />
                    }
                    
                </td>
                <td class="align-middle">
                @Html.DisplayFor(modelItem => item.role.Name)
            </td>
                <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
                <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Password)
            </td>
                <td class="align-middle">
                 
                    <a href="@Url.Action("Edit", "Utilisateur", new { id = item.Id })" class="btn btn-success">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a href="@Url.ActionLink("Details", "Utilisateur", new { id = item.Id })" class="btn btn-warning">
                        <i class="fa-sharp fa-solid fa-circle-info"></i>Details
                    </a>
                  
                    <a href="@Url.ActionLink("Delete", "Utilisateur", new { id = item.Id })" class="btn btn-danger ">
                        <i class="fa-sharp fa-solid fa-trash"></i>delete
                       
                    </a>
                   


                    
                    
            </td>
        </tr>
}
    </tbody>
</table>
