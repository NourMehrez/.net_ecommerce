@model First_Project.Models.Utilisateur

@{
    ViewData["Title"] = "Details";
}
<head>
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
</head>


<body class="bg-light">
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        @if (Model.ImageUrl != null)
                        {
                            <img src="~/uploads/@Model.ImageUrl" alt="User Image" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;" />
                        }
                            <h4 class="card-title">@Model.Name @Model.LastName</h4>
                        <p class="text-muted">@Model.Email</p>
                        <a href="@Url.Action("Edit", "Utilisateur", new { id = Model.Id })" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Edit Profile
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Profile Details</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4 text-primary font-weight-bold">User ID</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

                            <dt class="col-sm-4 text-primary font-weight-bold">Role</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.role.Name)</dd>

                            <dt class="col-sm-4 text-primary font-weight-bold">Username</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.UserName)</dd>

                            <dt class="col-sm-4 text-primary font-weight-bold">Email</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                            <dt class="col-sm-4 text-primary font-weight-bold">Phone</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Tel)</dd>
                        </dl>

                        <style>
                            .row dt {
                                margin-bottom: 10px;
                            }

                            .row dd {
                                margin-bottom: 10px;
                                border-bottom: 1px solid #ddd;
                                padding-bottom: 10px;
                            }

                            .row dt::after {
                                content: ":";
                            }

                            .text-primary {
                                color: #007bff !important;
                            }

                            .font-weight-bold {
                                font-weight: 600;
                            }
                        </style>

                    </div>
                </div>
            </div>
        </div>


     

        


 
        



            




</body>
