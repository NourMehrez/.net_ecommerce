@model IEnumerable<First_Project.Models.role>

@{
    ViewData["Title"] = "Index";
}





<!-- Page Title -->
<div class="container mt-5">
    <h1 class="text-center mb-4">Roles Management</h1>

    <!-- Button to Create New Role -->
    <div class="text-right mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Role
        </a>
    </div>

    <!-- Roles Table -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td class="align-middle">
                            <!-- View Details Button -->
                            <a href="@Url.Action("Details", "Role", new { id = item.Id })" class="btn btn-warning btn-sm">
                                <i class="fa-solid fa-circle-info"></i> Details
                            </a>
                            <!-- Delete Button -->
                            <a href="@Url.Action("Delete", "Role", new { id = item.Id })" class="btn btn-danger btn-sm ms-2">
                                <i class="fa-solid fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



