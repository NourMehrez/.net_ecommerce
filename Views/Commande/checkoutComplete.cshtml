
<div class="checkout-message-container">
    <div class="checkout-message">
        <i class="fas fa-check-circle"></i>
        <h1>@ViewBag.CheckoutCompleteMessage</h1>
        <p>Thank you for your purchase! Your order has been successfully processed.</p>
        <a href="/" class="btn btn-primary">Return to Home</a>
    </div>
</div>
<style>
    .checkout-message-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 70vh; /* Adjust this value to your preference */
        background-color: #f8f9fa; /* Light background */
    }

    .checkout-message {
        background-color: #ffffff; /* White background for the message box */
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        max-width: 500px;
        width: 100%;
    }

        .checkout-message i {
            font-size: 50px;
            color: #28a745; /* Green color for the check icon */
            margin-bottom: 20px;
        }

        .checkout-message h1 {
            font-size: 24px;
            font-weight: 700;
            color: #333;
            margin-bottom: 10px;
        }

        .checkout-message p {
            font-size: 16px;
            color: #555;
            margin-bottom: 20px;
        }

        .checkout-message .btn-primary {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .checkout-message .btn-primary:hover {
                background-color: #0056b3;
            }

</style>